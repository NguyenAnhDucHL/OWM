@model Product

@{
    ViewBag.Title = "Detail";
}
<link href="~/Assets/css/store.css" rel="stylesheet">
@{
	var cateList = ViewBag.CateList as List<CategoryProduct>;
}

<style>
	.row {
		margin: 20px 0;
	}
</style>

@section NavBar{
	<nav class="navbar navbar-inverse bg-inverse fixed-top bg-faded">
		<div style="width:100%">
			<div class="col">
				<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#cart">
					Giỏ hàng (<span class="total-count"></span>)
				</button>
				<button class="clear-cart btn btn-danger ">Xóa Giỏ hàng</button>
				@Html.Partial("_PartialLoginButton")
			</div>
		</div>
	</nav>
}

<section class="page-section cta">
	<div class="container">
		<div class="row">
			<div class="col-xl-12 mx-auto">
				<div class="cta-inner rounded">

					<!-- Main -->
					<div class="container">
						<div class="row">
							<div class="col-md-6">
								<img src="@Model.Image" alt="" width="400" height="500" style="margin: 0 auto"/>
							</div>
							<div class="col-md-6">
								<h2><strong>@Model.ProductName</strong></h2>
								<br/>
								<h4>@String.Format("{0:0,0 ₫}", Model.SalePrice)</h4>
								<br/>
								<p>Nhà Thuốc: @Model.Drugstore</p>
								<br/>
								<a href="#" data-Id="@Model.ProductId" data-name="@Model.ProductName" data-price="@Model.SalePrice" class="add-to-cart btn btn-primary">
									Thêm Vào giỏ hàng
								</a>
							</div>
		                    
						</div>
						
						<div class="row">
							<h4>MÔ TẢ</h4>
						</div>
						<div class="row" style="background-color:white">
							<div style="margin:0 100px;" class="rounded">
								@Html.Raw(Model.Description)

							</div>
						</div>
					</div>
					
					<!-- Modal -->
					<div class="modal fade" id="cart" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
					     aria-hidden="true">
						<div class="modal-dialog modal-lg" role="document">
							<div class="modal-content">
								<div class="modal-header">
									<h5 class="modal-title" id="exampleModalLabel">Giỏ hàng</h5>
									<button type="button" class="close" data-dismiss="modal" aria-label="Close">
										<span aria-hidden="true">&times;</span>
									</button>
								</div>
								<div class="modal-body">
									<table class="show-cart table">
									</table>
									<div class="text-center">Tổng tiền : <span class="total-cart"></span> ₫</div>
								</div>
								<div class="modal-footer">
									<button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
									<a class="btn btn-primary" href="@Url.Action("Order","Home")">Đặt Hàng</a>
								</div>
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
</section>
@section scripts{
	<script src="~/Assets/vendor/bootstrap/js/business-casual.js"></script>
}
