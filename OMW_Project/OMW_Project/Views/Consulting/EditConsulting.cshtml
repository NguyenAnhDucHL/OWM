@model OMW_Project.Models.Consulting

@{
    ViewBag.Title = "EditConsulting";
}

<h2>Sửa tư vấn</h2>

<section class="page-section cta">
    <div class="container">
        <div class="row">
            <div class="col-xl-12 mx-auto">
                <div class="cta-inner rounded">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ConsultingId)
                        @Html.HiddenFor(model => model.PatientId)
                        @Html.HiddenFor(model => model.DoctorId)
                        @Html.HiddenFor(model => model.Status)

                        <div class="form-group">
                            <div class="control-label col-md-2">
                                <label>Vấn đề của bạn</label>
                            </div>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PatientIssue, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PatientIssue, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="control-label col-md-2">
                                <label>Tên bác sĩ</label>
                            </div>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Doctor.FullName, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.StartConsulting, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.StartConsulting, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Sửa" class="btn btn-info" />
                                <a class="btn btn-default" href="@Url.Action("History", "Consulting")">Quay lại</a>
                            </div>
                        </div>
                    </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>