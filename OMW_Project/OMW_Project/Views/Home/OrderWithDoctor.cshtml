@model OrdersViewModel
@{
    ViewBag.Title = "Order";
}

<div class="row">
    <table class="show-cart table table-striped">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th style="width:20%">Số lượng</th>
                <th style="width:20%">Giá</th>
                <th style="width:20%">Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ListProducts)
            {
                <tr>
                    <td>@item.Product.ProductName
                        <input type="hidden" value="@item.ProductId" />
                    </td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitCost</td>
                    <td>@item.TotalCost.ToString("C1", CultureInfo.GetCultureInfo("vi-VN"))</td>
                </tr>
            }
        </tbody>

    </table>
    <div class="col-md-9"></div>
    <div class="col-md-3 ">Total price: <span class="total-cart">@Model.ListProducts.Sum(c => c.TotalCost).ToString("C1", CultureInfo.GetCultureInfo("vi-VN"))</span></div>
</div>
<h2>Thông tin giao hàng</h2>

<div class="row">
    @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10 float-right">
        @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control" } })
    </div>
</div>
<div class="row">
    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10 float-right">
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
    </div>
</div>
<div class="row">
    @Html.LabelFor(model => model.Mobile, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10 float-right">
        @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "form-control" } })
    </div>
</div>
<div class="row">
    @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10 float-right">
        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
    </div>
</div>
<div class="row">
    <div class="input-group">
        <button id="btnSaveOrder" style="margin:0 auto" class="btn btn-danger">Đặt Hàng</button>
    </div>
</div>


