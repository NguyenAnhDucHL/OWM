<section class="page-section cta">
	<div class="container">
		<div class="row justify-content-center">
			<div class="banner" style="margin-bottom:30px">
				<p style="color: white">Một số sản phẩm chính</p>
			</div>
			<div class="row text-center" style="margin-left:5px">
				@foreach (var item in ViewBag.lstProducts)
				{
					<div class="col-md-3">
						<div class="card justify-content-around" style="width: 15rem;height: 400px">
							<a href="@Url.Action("Detail", "Product", new {productId = item.ProductId})">
								<img class="card-img-top" src="@item.Image"
									 alt="Card image cap">
							</a>
							<div class="card-block">
								<p class="card-title">@item.ProductName</p>
								<h6 class="card-text">Giá tiền: @String.Format("{0:0,0 ₫}", item.SalePrice)</h6>
							</div>
						</div>
						<br />
					</div>
				}
			</div>
		</div>
	</div>
</section>
<!--post-->
<section class="page-section cta">
	<div class="container">
		<div class="row">
			<div class="col-xl-12 mx-auto">
				<div class="cta-inner rounded">
					@foreach (var item in Model)
					{
						<div class="row">
							<div class="col-4"><img src="@item.Image" class="img-fluid" /></div>
							<div class="col-8">
								<h2><a href="@Url.Action("PostDetail", "Home", new {@id = item.PostId})" style="color: black" target="_blank">@item.Title</a></h2>

								@if (item.Description.Length > 300)
								{
									<div>@Html.Raw(item.Description.Substring(0, 300) + " ...")</div>
								}
								else
								{
									<div>
										@Html.Raw(item.Description)
									</div>

								}
								@*<div>@HtmlUtility.PostDescription(@Html.Raw(item.Description).ToString(), 300)</div>*@
								<div class="col-2  offset-10"><a href="@Url.Action("PostDetail", "Home", new {@id = item.PostId})"> Chi Tiết </a></div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>

	</div>
</section>

