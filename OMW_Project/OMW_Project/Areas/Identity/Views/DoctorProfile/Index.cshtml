@model IEnumerable<DoctorProfile>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách bác sĩ</h2>

<div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
    <div class="row">
        <div class="col-sm-12">
            <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                <thead>
                    <tr>
	                    <th>Email</th>
	                    <th>Họ tên</th>
	                    <th>Địa chỉ</th>
	                    <th>Số điện thoại</th>
	                    <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr role="row" class="odd">
	                    <td class="sorting_1"><a href="@Url.Action("Details", "DoctorProfile", new { id = item.UserId})">@item.User.Email</a>
	                    </td>
                        <td>@Html.DisplayFor(modelItem => item.User.FullName)</td>
	                    <td>@Html.DisplayFor(modelItem => item.User.Address)</td>
                        <td>@Html.DisplayFor(modelItem => item.User.PhoneNumber)</td>
	                    <td>
		                    <a class="btn btn-info" href="@Url.Action("Edit", "DoctorProfile", new { id = item.UserId })">Sửa</a>
	                    </td>

                    </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

</div>
@section scripts{
    <script>
		$('#example1').DataTable();

    </script>
}
