@model User

@{
    ViewBag.Title = "Delete";
}

<h2>Xóa</h2>

<h3>Bạn chắc chắn muốn xóa người dùng này?</h3>
<div>
	<hr />
    <dl class="dl-horizontal">
	    <dt>
		    Email:
	    </dt>
	    <dd>
		    @Model.Email
	    </dd>
	    <dt>
		    Họ tên:
	    </dt>
	    <dd>
		    @Model.FullName
	    </dd>
	    <dt>
		    Giới tính:
	    </dt>
	    <dd>
		    @(Model.Sex ? "Male" : "Female")
	    </dd>
	    <dt>
		    Image:
	    </dt>
	    <dd>
		    <img src="@Model.Image" width="200" height="300" alt="" />
	    </dd>
	    <dt>
		    Địa chỉ:
	    </dt>
	    <dd>
		    @Model.Address
	    </dd>
	    <dt>
		    Số điện thoại:
	    </dt>
	    <dd>
		    @Model.PhoneNumber
	    </dd>
	    
    </dl>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="col-md-offset-1 col-md-10">
            <input type="submit" value="Xóa" class="btn btn-danger" /> 
			<a class="btn btn-default" href="@Url.Action("Index", "UsersAdmin")">Quay lại</a>
        </div>
    }
</div>
