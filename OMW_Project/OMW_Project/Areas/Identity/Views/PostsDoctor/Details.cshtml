}

<h2>Chi tiết bài viết</h2>

<div class="row">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CategoryPost.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryPost.CategoryName)
