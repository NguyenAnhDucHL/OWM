@model OMW_Project.Models.CategoryPost

@{
    ViewBag.Title = "Edit";
}

<h2>Sửa Thể loại bài viết</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CategoryPostId)

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
	            <input type="submit" value="Sửa" class="btn btn-info" />
	            <a class="btn btn-default" href="@Url.Action("Index", "CategoryPostAdmin")">Quay lại</a>
            </div>
        </div>
    </div>
}
