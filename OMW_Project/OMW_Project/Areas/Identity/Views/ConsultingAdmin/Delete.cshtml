@model OMW_Project.Models.Consulting

@{
    ViewBag.Title = "Delete";
}

<h2>Xóa</h2>

<h3>Bạn chắc chắn muốn xóa lịch tư vấn này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Bác sĩ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Doctor.FullName)
        </dd>

        <dt>
            Tên bệnh nhân
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Patient.FullName)
        </dd>


        <dt>
            Vấn đề bệnh nhân
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PatientIssue)
        </dd>

        <dt>
            Thời gian tư vấn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartConsulting)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <div class="col-md-offset-1 col-md-10">
            <input type="submit" value="Xóa" class="btn btn-danger" /> 
            <a class="btn btn-default" href="@Url.Action("Index", "ConsultingAdmin")">Quay lại</a>
        </div>
    }
</div>
