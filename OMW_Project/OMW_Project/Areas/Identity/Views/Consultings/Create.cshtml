@model OMW_Project.Models.Consulting

@{
    ViewBag.Title = "Create";
}

<h2>Tạo lịch tư vấn</h2>
<link rel="stylesheet" href="/Content/bootstrap-datetimepicker.css" />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Consulting</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        @*<div class="form-group">
            @Html.LabelFor(model => model.PatientIssue, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PatientIssue, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PatientIssue, "", new { @class = "text-danger" })
            </div>
        </div>*@

	<div class="form-group">
		<label class="control-label col-md-2">Tên bác sĩ</label>
		<div class="col-md-4">
			@Html.DropDownList("DoctorId", null, htmlAttributes: new { @class = "form-control" })
			@Html.ValidationMessageFor(model => model.DoctorId, "", new { @class = "text-danger" })
		</div>
	</div>
        <div class="form-group">
	        <label class="control-label col-md-2">Ngày tư vấn</label>
            <div class="col-md-4">
                <div class='input-group date' id='datetimepicker1'>
                    @Html.TextBoxFor(model => model.StartConsulting, new { @class = "form-control",@readonly="" })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>

                @Html.ValidationMessageFor(model => model.StartConsulting, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
	            <input type="submit" value="Create" class="btn btn-success" />
	            <a class="btn btn-default" href="@Url.Action("Index", "Consultings")">Quay lại</a>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script type="text/javascript" src="/scripts/moment.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.js"></script>
    <script>

        $('#datetimepicker1').datetimepicker({
            format: 'DD/MM/YYYY   HH:mm',
            stepping: 5,
            ignoreReadonly:true
        });

    </script>
}
