@model IEnumerable<Consulting>

@{
    ViewBag.Title = "Consulting Result";
}

<h2>Danh sách đã tư vấn</h2>

<div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
    <div class="row">
        <div class="col-sm-12">
            <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                <thead>
                    <tr>
                        <th>Tên bệnh nhân</th>
                        <th>Thời gian bắt đầu</th>
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr role="row" class="odd">
                            <td class="sorting_1">@Html.DisplayFor(modelItem => item.Patient.FullName)</td>
                            <td>
                                @item.StartConsulting
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Status)</td>
                            <td>
                                @Html.ActionLink("Trả kết quả", "Create","ConsultResult", new { id = item.ConsultingId },null) |
                            </td>

                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

</div>
@section scripts{
    <script>
        $('#example1').DataTable();

    </script>
}


